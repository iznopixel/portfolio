---
import Nav from './Nav.astro';
---

<section class="hero grainy" aria-label="Introduction">
  <div class="container hero-inner">

    <!-- Left column -->
    <div class="hero-left">
      <div class="hero-nav-row">
        <Nav />
      </div>

      <div class="hero-text">
        <h1 class="display hero-name">Isabel<br />Hankes</h1>
        <p class="hero-tagline">Full stack problem solver &amp; frontend lead.</p>
        <p class="hero-subtitle">Eliminating friction to unlock maximum flow-state.</p>
      </div>
    </div>

    <!-- Divider -->
    <div class="hero-divider" aria-hidden="true"></div>

    <!-- Right column -->
    <div class="hero-right">
      <div class="hero-photo-wrap">
        <img
          src="/images/profile.jpg"
          alt="Isabel Hankes — mountain meadow at sunset"
          class="hero-photo"
          width="340"
          height="340"
          loading="eager"
        />
      </div>

      <div class="hero-deco" aria-hidden="true">
        <span>✦</span><span>✧</span><span>✦</span>
      </div>
    </div>

  </div>
</section>

<style>
  .hero {
    background-color: var(--navy);
    min-height: 100svh;
    display: flex;
    align-items: center;
  }

  .hero-inner {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    gap: 0;
    align-items: center;
    min-height: 80vh;
  }

  /* ── Left ── */
  .hero-left {
    display: flex;
    flex-direction: column;
    gap: 3rem;
    padding-right: 4rem;
  }

  .hero-nav-row {
    display: flex;
    justify-content: flex-start;
  }

  .hero-text {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .hero-name {
    font-size: clamp(3.5rem, 7vw, 6.5rem);
    color: var(--cream);
    line-height: 1.0;
  }

  .hero-tagline {
    font-family: var(--font-ui);
    font-size: clamp(0.95rem, 1.5vw, 1.1rem);
    font-weight: 300;
    color: var(--light-blue);
    line-height: 1.5;
    max-width: 38ch;
  }

  .hero-subtitle {
    font-family: var(--font-ui);
    font-size: clamp(0.85rem, 1.2vw, 0.95rem);
    font-style: italic;
    font-weight: 300;
    color: var(--muted);
    max-width: 38ch;
  }

  /* ── Divider ── */
  .hero-divider {
    width: 1px;
    height: 60vh;
    background: linear-gradient(to bottom, transparent, var(--light-blue) 30%, var(--light-blue) 70%, transparent);
    opacity: 0.3;
    flex-shrink: 0;
  }

  /* ── Right ── */
  .hero-right {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    padding-left: 4rem;
  }

  .hero-photo-wrap {
    width: clamp(200px, 28vw, 320px);
    height: clamp(200px, 28vw, 320px);
    border-radius: 50%;
    overflow: hidden;
    border: 2px solid rgba(172, 217, 230, 0.2);
    flex-shrink: 0;
  }

  .hero-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
  }

  .hero-deco {
    display: flex;
    gap: 0.75rem;
    font-size: 0.65rem;
    color: var(--light-blue);
    opacity: 0.5;
    letter-spacing: 0.5rem;
  }

  /* ── Mobile ── */
  @media (max-width: 767px) {
    .hero-inner {
      grid-template-columns: 1fr;
      grid-template-rows: auto auto auto;
      gap: 2.5rem;
      text-align: center;
      padding: 3rem 0;
    }

    .hero-left {
      padding-right: 0;
      align-items: center;
    }

    .hero-nav-row {
      justify-content: center;
    }

    .hero-divider {
      width: 60%;
      height: 1px;
      background: linear-gradient(to right, transparent, var(--light-blue) 30%, var(--light-blue) 70%, transparent);
      opacity: 0.3;
      margin: 0 auto;
    }

    .hero-right {
      padding-left: 0;
    }

    .hero-photo-wrap {
      width: 220px;
      height: 220px;
    }

    .hero-text {
      align-items: center;
    }
  }

  /* ── Tablet ── */
  @media (min-width: 768px) and (max-width: 1023px) {
    .hero-left {
      padding-right: 2.5rem;
    }
    .hero-right {
      padding-left: 2.5rem;
    }
  }
</style>
