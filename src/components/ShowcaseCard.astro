---
interface Props {
  title: string;
  description: string;
  link?: string;
  linkLabel?: string;
  comingSoon?: boolean;
}

const { title, description, link, linkLabel = 'Watch the demo', comingSoon = false } = Astro.props;
---

<article class="card">
  <div class="card-body">
    <h3 class="card-title display">{title}</h3>
    <p class="card-desc">{description}</p>
  </div>

  <div class="card-footer">
    {comingSoon ? (
      <span class="card-coming-soon label">Full case study coming soon...</span>
    ) : link ? (
      <a href={link} target="_blank" rel="noopener noreferrer" class="card-link">
        <span class="card-link-label">{linkLabel}</span>
        <span class="card-link-arrow" aria-hidden="true">â†’</span>
      </a>
    ) : null}
  </div>
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 2rem;
    padding: 2.25rem 2rem;
    border: 1px solid rgba(172, 217, 230, 0.12);
    background: rgba(255, 255, 255, 0.025);
    transition: border-color 0.25s ease, background 0.25s ease;
    height: 100%;
  }

  .card:hover {
    border-color: rgba(172, 217, 230, 0.28);
    background: rgba(255, 255, 255, 0.04);
  }

  .card-body {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .card-title {
    font-size: clamp(1.6rem, 3vw, 2.2rem);
    color: var(--cream);
    text-transform: lowercase;
    line-height: 1.0;
  }

  .card-desc {
    font-family: var(--font-ui);
    font-size: 0.92rem;
    font-weight: 300;
    color: var(--muted);
    line-height: 1.65;
    max-width: 42ch;
  }

  .card-footer {
    display: flex;
    align-items: center;
  }

  .card-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-family: var(--font-ui);
    font-size: 0.82rem;
    font-style: italic;
    font-weight: 400;
    color: var(--amber);
    text-decoration: none;
    transition: gap 0.2s ease, opacity 0.2s ease;
  }

  .card-link:hover {
    gap: 0.85rem;
    opacity: 0.9;
  }

  .card-link-arrow {
    transition: transform 0.2s ease;
  }

  .card-link:hover .card-link-arrow {
    transform: translateX(3px);
  }

  .card-coming-soon {
    color: var(--light-blue);
    opacity: 0.6;
    font-style: italic;
    font-size: 0.72rem;
    text-transform: none;
    letter-spacing: 0.05em;
    font-family: var(--font-ui);
    font-weight: 300;
  }
</style>
